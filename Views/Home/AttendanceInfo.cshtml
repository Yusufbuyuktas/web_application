@using web_odev.Models
@model Student
@using Microsoft.AspNetCore.Builder.Extensions

@{
    ViewData["Title"] = "Yoklama Detay Bilgisi";
}

<h1 class="display-4">Öğrenci Yoklama Detayı</h1>
<hr />

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name @Model.Surname</h5>
    
        <p class="card-text">
            <strong>Öğrenci Numarası:</strong> @Model.StudentID <br />
            <strong>Yoklama Durumu:</strong>

            @if (@Model.Signed)
            {
                <span class="badge bg-success">İmzalandı</span>
            }
            else
            {
                 <span class="badge bg-success">İmzalanmadı</span>
            }
        </p>
            @if (Model.Signed)
            {
                <p class="card-text">
                    <strong>İmzalama Zamanı</strong> @Model.SignedAt.ToString("dd.MM.yyy HH:mm:ss")
                </p>
            }
    </div>
</div>

<div class="mt-3">
    <a asp-action="AllStudents" class="btn btn-secondary">Tüm Listeye Dön</a>
</div>