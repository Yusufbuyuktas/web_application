@{
    ViewData["Title"] = "Tüm Öğrenciler Listesi";
}

<h1 class="display-4">Kursa Kayıtlı Tüm Öğrenciler</h1>

<p class="mt-4">
    <strong>Kursa Kayıtlı Toplam Öğrenci Sayısı:</strong> <span class="badge bg-primary">@ViewBag.AllStudents.Count</span>
</p>

<p>
    <a asp-action="Index" class="btn btn-outline-secondary">Ana Sayfaya Dön</a>
</p>

<hr />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Öğrenci Numarası</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Yoklama Durumu</th>
            <th>Detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in ViewBag.AllStudents)
        {
            <tr>
                <td>@student.StudentID</td>
                <td>@student.Name</td>
                <td>@student.Surname</td>
                <td>
                    @if (student.Signed)
                    {
                        <span class="badge bg-success">İmzalandı</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">İmzalanmadı</span>
                    }
                </td>
                
                <td><a asp-action="AttendanceInfo" asp-route-id="@student.StudentID" class="btn btn-sm btn-info">Detay Gör</a></td>
            </tr>
        }
    </tbody>
</table>